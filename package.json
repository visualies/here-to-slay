{
  "name": "here-to-slay",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"tsx servers/room-server/server.ts\" \"tsx servers/dice-server/dice-server.ts\" \"next dev\"",
    "dev:client-only": "next dev",
    "prebuild": "npm ci",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "server": "tsx servers/room-server/server.ts",
    "dice-server": "tsx servers/dice-server/dice-server.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test": "playwright test --headed --project=chromium --reporter=list",
    "test:cards": "playwright test --grep \"should create room, start round, and assign hand cards to players\" --headed --project=chromium --reporter=list",
    "test:debug": "playwright test --headed --project=chromium --debug",
    "test:all": "playwright test --headed --reporter=list",
    "test:headless": "playwright test --project=chromium --reporter=list"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-three/cannon": "^6.6.0",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@types/three": "^0.179.0",
    "@y/websocket-server": "^0.1.1",
    "better-sqlite3": "^12.2.0",
    "cannon": "^0.6.2",
    "cannon-es": "^0.20.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.9.7",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0",
    "ws": "^8.18.3",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/cannon": "^0.1.13",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
